<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcfade"
    tools:context=".WeeklyStatsFragment"
    android:id="@+id/parentLayout">

    <TextView
        android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Your Weekly Statistics"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#247d40"
        android:gravity="left"
        android:id="@+id/profileHeader"
        app:layout_constraintBottom_toTopOf="@+id/greeting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="30dp"
        android:textColor="#247d40"
        android:textStyle="bold"
        android:text="Weekly Stats"
        android:id="@+id/WeeklyStatsPH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>