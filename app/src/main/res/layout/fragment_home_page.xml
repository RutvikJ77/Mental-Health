
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcfade"
    tools:context=".HomePageFragment"
    android:id="@+id/parentLayout">

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:fontFamily="casual"
        android:text="Home"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#247d40"
        android:id="@+id/homePageHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:text="Exit"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/weekly_stats_btn"
        app:layout_constraintRight_toLeftOf="@+id/chatbot_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/buttonshape2"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="592dp" />

    <Button
        android:text="Chat with Fred"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/chatbot_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/buttonshape2"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="592dp" />


    <Button
        android:text="Profile"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/profile_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/chatbot_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/buttonshape2"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="592dp" />

    <ImageView
        android:id="@+id/fred"
        android:layout_width="111dp"
        android:layout_height="113dp"
        android:src="@drawable/fred"
        app:layout_constraintTop_toBottomOf="@id/homePageHeader"
        app:layout_constraintLeft_toLeftOf="@id/weekly_stats_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="21dp"
        android:textColor="#247d40"
        android:text="Hello,\ngood to see you!"
        android:id="@+id/greet"
        app:layout_constraintLeft_toRightOf="@id/fred"
        app:layout_constraintTop_toTopOf="@id/fred" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="#09331d"
        android:text="\nMotivational Quote:"
        android:id="@+id/quoteHeader"
        app:layout_constraintLeft_toRightOf="@id/fred"
        app:layout_constraintTop_toBottomOf="@id/fred"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="18dp"
        android:textColor="#09331d"
        android:text="\nJust keep swimming, just keep swimming!"
        android:id="@+id/quote"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quoteHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>