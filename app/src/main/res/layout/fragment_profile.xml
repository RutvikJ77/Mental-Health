<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcfade"
    tools:context=".ProfileFragment"
    android:id="@+id/parentLayout">

    <TextView
        android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Your Profile"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#247d40"
        android:gravity="left"
        android:id="@+id/profileHeader"
        app:layout_constraintBottom_toTopOf="@+id/greeting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="30dp"
        android:textColor="#247d40"
        android:textStyle="bold"
        android:text="Profile"
        android:id="@+id/ProfilePH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="30dp"
        android:textColor="#247d40"
        android:textStyle="bold"
        android:text="Hello"
        android:id="@+id/profileName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ProfilePH" />

    <Button
        android:id="@+id/signout_btn"

        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:text="Sign out"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/fred"
        android:layout_width="111dp"
        android:layout_height="113dp"
        android:src="@drawable/fred"
        app:layout_constraintTop_toBottomOf="@id/profileHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ProfilePH"
        app:layout_constraintLeft_toLeftOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>